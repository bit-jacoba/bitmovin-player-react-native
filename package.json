{
  "name": "react-native-bitmovin-player",
  "version": "0.0.1",
  "description": "Bitmovin Player React Native",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "author": "Murilo Paix√£o <murilo.paixao.2@gmail.com>",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "RNBitmovinPlayer.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build": "tsup ./src/index.ts --dts --target es2020 --format cjs,esm -d lib",
    "predocs": "yarn api-extractor run --local --verbose",
    "docs": "api-documenter markdown -i temp -o docs",
    "release": "release-it",
    "example": "yarn build && yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn && yarn example && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/bitmovin/player-react-native-bridge",
  "license": "MIT",
  "homepage": "https://github.com/bitmovin/player-react-native-bridge#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@microsoft/api-extractor": "^7.25.0",
    "@microsoft/api-documenter": "^7.17.17",
    "@react-native-community/eslint-config": "^3.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "17.0.39",
    "@types/react-native": "0.67.7",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "^0.68.2",
    "release-it": "^14.2.2",
    "tsup": "^5.12.8",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-native": ">=0.64"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
